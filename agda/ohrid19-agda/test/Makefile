run=../src/runwhile
#../src/Main

.PHONY: all good bad extended

all : good bad

good :
	@echo "==========================================================================="
	@echo "============================ Successful tests ============================="
	@echo "==========================================================================="
	$(run) simple.c
	$(run) cond.c
	$(run) variables.c
	$(run) fib.c
	$(run) sum.c

extended :
	@echo "==========================================================================="
	@echo "=================== Successful tests (extended language) =================="
	@echo "==========================================================================="
	$(run) gcd.c

bad :
	@echo "==========================================================================="
	@echo "============================== Failing tests =============================="
	@echo "==========================================================================="
	! $(run) bad/unboundVariable.c
	@echo "---------------------------------------------------------------------------"
	! $(run) bad/typeMismatch.c

# EOF
